{
  "name": "opvo-1.x",
  "version": "1.0.0",
  "description": "OPVO 1.x",
  "scripts": {
    "clear": "find dist -type f ! -name '*.sqlite' -delete 2>/dev/null || true",
    "create": "mkdir -p dist/server/migrations",
    "copy": "cp -R src/server/migrations/ dist/server",
    "prepare": "npm run clear && npm run create && npm run copy",
    "annotate": "ng-annotate -a dist/client/application.js -o dist/client/application.js",
    "build": "npm run prepare && webpack && npm run annotate",
    "test": "node_modules/.bin/karma start",
    "start": "node dist/server/application.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taumechanica/opvo-1.x.git"
  },
  "author": "Eugen Baranowski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/taumechanica/opvo-1.x/issues"
  },
  "homepage": "https://github.com/taumechanica/opvo-1.x#readme",
  "dependencies": {
    "hapi": "^16.1.0",
    "inert": "^4.1.0",
    "sqlite": "^2.3.0"
  },
  "devDependencies": {
    "@types/angular": "^1.6.9",
    "@types/angular-material": "^1.1.45",
    "@types/angular-mocks": "^1.5.9",
    "@types/angular-translate": "^2.4.35",
    "@types/angular-ui-router": "^1.1.36",
    "@types/hapi": "^16.0.0",
    "@types/inert": "^4.0.0",
    "@types/jasmine": "^2.5.45",
    "@types/joi": "^10.0.1",
    "angular": "^1.6.3",
    "angular-animate": "^1.6.3",
    "angular-aria": "^1.6.3",
    "angular-material": "^1.1.3",
    "angular-messages": "^1.6.3",
    "angular-mocks": "^1.6.3",
    "angular-sanitize": "^1.6.3",
    "angular-translate": "^2.15.1",
    "angular-translate-loader-partial": "^2.15.1",
    "angular-ui-router": "^0.4.2",
    "autoprefixer": "^6.7.7",
    "awesome-typescript-loader": "^3.1.2",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.27.3",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.10.1",
