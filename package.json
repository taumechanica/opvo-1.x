  },
  "homepage": "https://github.com/taumechanica/opvo-1.x#readme",
  "dependencies": {
    "hapi": "^17.2.2",
    "inert": "^5.1.0",
    "injection-js": "^2.2.1",
    "reflect-metadata": "^0.1.12",
    "sqlite": "^2.9.1"
  },
  "devDependencies": {
    "@types/angular": "^1.6.43",
    "@types/angular-material": "^1.1.58",
    "@types/angular-mocks": "^1.5.11",
