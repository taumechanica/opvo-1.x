{
  "name": "opvo-demo",
  "version": "1.0.0",
  "description": "OPVO demo application",
  "scripts": {
    "clear": "find dist -type f ! -name '*.sqlite' -delete 2>/dev/null || true",
    "create": "mkdir -p dist/server/migrations",
    "copy": "cp -R src/server/migrations/ dist/server",
    "prepare": "npm run clear && npm run create && npm run copy",
    "annotate": "ng-annotate -a dist/client/application.js -o dist/client/application.js",
    "build": "npm run prepare && webpack && npm run annotate",
    "start": "node dist/server/application.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taumechanica/opvo-demo.git"
  },
  "author": "Eugen Baranowski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/taumechanica/opvo-demo/issues"
  },
  "homepage": "https://github.com/taumechanica/opvo-demo#readme",
  "dependencies": {
    "hapi": "^16.1.0",
    "inert": "^4.1.0",
    "sqlite": "^2.3.0"
  },
  "devDependencies": {
    "@types/angular": "^1.6.5",
    "@types/angular-material": "^1.1.44",
    "@types/angular-translate": "^2.4.34",
    "@types/angular-ui-router": "^1.1.36",
    "@types/hapi": "^16.0.0",
    "@types/inert": "^4.0.0",
    "@types/joi": "^10.0.0",
    "angular": "^1.6.2",
    "angular-animate": "^1.6.2",
    "angular-aria": "^1.6.2",
    "angular-material": "^1.1.3",
    "angular-messages": "^1.6.2",
    "angular-sanitize": "^1.6.2",
    "angular-translate": "^2.13.1",
    "angular-translate-loader-partial": "^2.13.1",
    "angular-ui-router": "^0.4.2",
    "autoprefixer": "^6.7.2",
    "awesome-typescript-loader": "^3.0.4-rc.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.10.0",
    "less": "^2.7.2",
    "less-loader": "^2.2.3",
    "postcss-loader": "^1.2.2",
    "pug": "^2.0.0-beta11",
    "pug-html-loader": "^1.1.0",
    "style-loader": "^0.13.1",
    "typescript": "^2.1.6",
    "webpack": "^1.14.0"
  }
}
