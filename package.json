  },
  "homepage": "https://github.com/taumechanica/opvo-1.x#readme",
  "dependencies": {
    "hapi": "^16.5.2",
    "inert": "^4.2.1",
    "injection-js": "^2.1.0",
    "reflect-metadata": "^0.1.10",
    "sqlite": "^2.8.0"
  },
  "devDependencies": {
    "@types/angular": "^1.6.32",
    "@types/angular-material": "^1.1.54",
    "@types/angular-mocks": "^1.5.11",
