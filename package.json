{
  "name": "opvo-1.x",
  "version": "1.0.1",
  "description": "OPVO 1.x",
  "scripts": {
    "clear": "find dist -type f ! -name '*.sqlite' -delete 2>/dev/null || true",
    "create": "mkdir -p dist/server/migrations",
    "copy": "cp -R src/server/migrations/ dist/server",
    "prepare": "npm run clear && npm run create && npm run copy",
    "build": "npm run prepare && webpack",
    "test": "node_modules/.bin/karma start || true",
    "start": "node dist/server/application.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taumechanica/opvo-1.x.git"
  },
