{
  "name": "opvo-demo",
  "version": "1.0.0",
  "description": "OPVO demo application",
  "scripts": {
    "clear": "find dist -type f ! -name '*.sqlite' -delete 2>/dev/null || true",
    "create": "mkdir -p dist/server/migrations",
    "copy": "cp -R src/server/migrations/ dist/server",
    "prepare": "npm run clear && npm run create && npm run copy",
    "annotate": "ng-annotate -a dist/client/application.js -o dist/client/application.js",
    "build": "npm run prepare && webpack && npm run annotate",
    "start": "node dist/server/application.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taumechanica/opvo-demo.git"
  },
  "author": "Eugen Baranowski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/taumechanica/opvo-demo/issues"
  },
  "homepage": "https://github.com/taumechanica/opvo-demo#readme",
  "dependencies": {
    "@types/angular": "^1.5.22",
    "@types/angular-ui-router": "^1.1.36",
    "@types/hapi": "^13.0.37",
    "@types/joi": "^10.0.0",
    "angular": "^1.6.1",
    "angular-ui-router": "^0.3.2",
    "hapi": "^16.0.2",
    "inert": "^4.0.4",
    "sqlite": "^2.2.4"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^3.0.0-beta.17",
    "file-loader": "^0.9.0",
    "pug": "^2.0.0-beta6",
    "pug-html-loader": "^1.0.10",
    "typescript": "^2.1.4",
    "webpack": "^1.14.0"
  }
}
